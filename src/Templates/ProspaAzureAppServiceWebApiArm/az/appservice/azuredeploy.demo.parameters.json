{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "value": "demo"
    },
    "appServicePlan": {
      "value": {
        "name": "template-sp",
        "skuName": "S1",
        "skuCapacity": 2,
        "autoScale": {
          "enabled": true,
          "cpuPercentThresholdToScaleOut": 90,
          "cpuPercentThresholdToScaleIn": 80,
          "minimumCapacity": 2,
          "maximumCapacity": 5,
          "defaultCapacity": 2
        }
      }
    },
    "alertWebhookUrl": {
      "value": "http://localhost"
    },
    "cpuThreshold": {
      "value": 70
    },
    "memoryThreshold": {
      "value": 70
    }
  }
}